<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    tools:context=".ui.AddProductActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/llHeader"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#F4FFFD"
            android:paddingTop="@dimen/_10sdp">


            <ImageView
                android:id="@+id/backButton"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/back_button"/>



            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/oswald_regular"
                android:text="Add Products"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />




        </RelativeLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/poppins_regular"
            android:text="Product Name"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_12sdp"
            tools:ignore="MissingConstraints" />


        <LinearLayout
            android:id="@+id/llProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/white_border_background"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/etProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:background="@null"
                android:fontFamily="@font/poppins_regular"
                android:hint="Enter Product Name"
                android:maxLength="30"
                android:padding="@dimen/_10sdp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />


        </LinearLayout>

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/red"
            android:textSize="@dimen/_10sdp"
            android:visibility="gone" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            android:text="Product Type"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_12sdp"
            tools:ignore="MissingConstraints" />


        <LinearLayout
            android:id="@+id/llProductType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:background="@drawable/white_border_background"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:id="@+id/etProductType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:background="@null"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/select_product_type"
                android:maxLength="30"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                app:drawableEndCompat="@drawable/arrow_down" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvProductType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/red"
            android:textSize="@dimen/_10sdp"
            android:visibility="gone" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            android:text="Price"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_12sdp"
            tools:ignore="MissingConstraints" />


        <LinearLayout
            android:id="@+id/llPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/white_border_background"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/etPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:background="@null"
                android:fontFamily="@font/poppins_regular"
                android:hint="Enter Price"
                android:maxLength="15"
                android:padding="@dimen/_10sdp"
                android:singleLine="true"
                android:inputType="numberDecimal"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />


        </LinearLayout>

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/red"
            android:textSize="@dimen/_10sdp"
            android:visibility="gone" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            android:text="Tax"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_12sdp"
            tools:ignore="MissingConstraints" />


        <LinearLayout
            android:id="@+id/llTax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/white_border_background"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/etTax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:background="@null"
                android:fontFamily="@font/poppins_regular"
                android:hint="Enter Tax"
                android:maxLength="30"
                android:padding="@dimen/_10sdp"
                android:singleLine="true"
                android:inputType="numberDecimal"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />


        </LinearLayout>

        <TextView
            android:id="@+id/tvTax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/red"
            android:textSize="@dimen/_10sdp"
            android:visibility="gone" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            android:text="Add Image"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_12sdp"
            tools:ignore="MissingConstraints" />



        <androidx.cardview.widget.CardView
            android:id="@+id/addCertificate"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_160sdp"
            android:background="@color/textColor"
            android:backgroundTint="@color/textColor"
            android:elevation="0dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp">

                <ImageView
                    android:id="@+id/add"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/add_post_" />


                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerInParent="true"
                    android:progress="50"
                    android:theme="@style/ProgressDialogStyle"
                    android:visibility="gone" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:maxLength="110"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="Add Image"
                    android:layout_below="@+id/add"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />


            </RelativeLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/certificate"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_160sdp"
            android:background="@color/textColor"
            android:backgroundTint="@color/textColor"
            android:elevation="0dp"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp">

                <ImageView
                    android:id="@+id/certificateImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <ImageView
                    android:id="@+id/certificateCross"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/cross_button"/>






            </RelativeLayout>



        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:id="@+id/addProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_25sdp"
            android:layout_marginVertical="@dimen/_30sdp"
            android:background="@drawable/main_button_background"
            android:clickable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semi_bold"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_15sdp"
                android:paddingVertical="@dimen/_8sdp"
                android:text="@string/add_product"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>



    </LinearLayout>


</androidx.core.widget.NestedScrollView>